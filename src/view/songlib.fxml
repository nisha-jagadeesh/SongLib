<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>

<AnchorPane 
	xmlns="http://javafx.com/javafx/11.0.1" 
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="view.SongLibController">
	
	<ListView 
		fx:id="listView" 
		AnchorPane.bottomAnchor="40" 
		AnchorPane.leftAnchor="40" 
		AnchorPane.rightAnchor="290" 
		AnchorPane.topAnchor="40" />
		
	<Button 
		fx:id="add"
		AnchorPane.topAnchor="10"
		AnchorPane.leftAnchor="50"
		text="Add" />
		
	<Button 
		fx:id="edit"
		AnchorPane.topAnchor="10"
		AnchorPane.leftAnchor="100"
		text="Edit" />
		
	<Button 
		fx:id="delete"
		AnchorPane.topAnchor="10"
		AnchorPane.leftAnchor="148"
		text="Delete" />
	
	<Text layoutX="300" layoutY="50" text="Song Details">
        <font>
        	<Font size="24.0" />
        </font>
    </Text>
        
	<Text text="Name: "
        AnchorPane.topAnchor="110" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="song"
		prefColumnCount="10"
		promptText="Ice Bear Anthem"
        AnchorPane.topAnchor="110" 
        AnchorPane.rightAnchor="10"/>
        
    <Text text="Artist: "
        AnchorPane.topAnchor="150" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="artist"
		prefColumnCount="10"
		promptText="Nisha Jagadeesh"
        AnchorPane.topAnchor="150" 
        AnchorPane.rightAnchor="10"/>
        
    <Text text="Album: "
        AnchorPane.topAnchor="190" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="album"
		prefColumnCount="10"
		promptText="The Ice Bear Collection"
        AnchorPane.topAnchor="190" 
        AnchorPane.rightAnchor="10"/>
        
    <Text text="Year: "
        AnchorPane.topAnchor="230" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="year"
		prefColumnCount="10"
		promptText="2020"
        AnchorPane.topAnchor="230" 
        AnchorPane.rightAnchor="10"/>
		
 
		
</AnchorPane>
