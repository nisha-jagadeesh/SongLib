<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>

<AnchorPane 
	xmlns="http://javafx.com/javafx/11.0.1" 
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="view.SongLibController">
	
	<ListView 
		fx:id="listView" 
		AnchorPane.bottomAnchor="40" 
		AnchorPane.leftAnchor="40" 
		AnchorPane.rightAnchor="290" 
		AnchorPane.topAnchor="40" />
		
	<Button 
		fx:id="add"
		AnchorPane.topAnchor="10"
		AnchorPane.leftAnchor="50"
		text="Add"
		onAction="#modifyList" />
		
	<Button 
		fx:id="edit"
		AnchorPane.topAnchor="10"
		AnchorPane.leftAnchor="100"
		text="Edit"
		onAction="#modifyList"/>
		
	<Button 
		fx:id="delete"
		AnchorPane.topAnchor="10"
		AnchorPane.leftAnchor="148"
		text="Delete"
		onAction="#modifyList" />
		
	<Button
		fx:id="done"
		AnchorPane.topAnchor="190"
		AnchorPane.leftAnchor="220"
		text="Done"
		onAction="#modifyList" />
	
	<Text AnchorPane.topAnchor="10" AnchorPane.rightAnchor="100" text="Song Details">
        <font>
        	<Font size="24.0" />
        </font>
    </Text>
       
    <!-- ************** DISPLAY AREA ************** -->
    
    <TextField 
		fx:id="song_display"
		prefColumnCount="10"
        AnchorPane.topAnchor="60" 
        AnchorPane.rightAnchor="50"/>
    <TextField 
		fx:id="artist_display"
		prefColumnCount="10"
        AnchorPane.topAnchor="100" 
        AnchorPane.rightAnchor="50"/>
    <TextField 
		fx:id="album_display"
		prefColumnCount="10"
        AnchorPane.topAnchor="140" 
        AnchorPane.rightAnchor="50"/>
    <TextField 
		fx:id="year_display"
		prefColumnCount="10"
        AnchorPane.topAnchor="180" 
        AnchorPane.rightAnchor="50"/>
        
        
    
       
       
       
    <!-- ************** ALL THE ADD/EDIT AREAS ************** -->
       
	<Text text="Name: "
        AnchorPane.topAnchor="230" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="song"
		prefColumnCount="10"
		promptText="Ice Bear Anthem"
        AnchorPane.topAnchor="230" 
        AnchorPane.rightAnchor="30"/>
        
    <Text text="Artist: "
        AnchorPane.topAnchor="270" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="artist"
		prefColumnCount="10"
		promptText="Nisha Jagadeesh"
        AnchorPane.topAnchor="270" 
        AnchorPane.rightAnchor="30"/>
        
    <Text text="Album: "
        AnchorPane.topAnchor="310" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="album"
		prefColumnCount="10"
		promptText="The Ice Bear Collection"
        AnchorPane.topAnchor="310" 
        AnchorPane.rightAnchor="30"/>
        
    <Text text="Year: "
        AnchorPane.topAnchor="350" 
        AnchorPane.rightAnchor="200"/>
        
	<TextField 
		fx:id="year"
		prefColumnCount="10"
		promptText="2020"
        AnchorPane.topAnchor="350" 
        AnchorPane.rightAnchor="30"/>
		
 
</AnchorPane>
